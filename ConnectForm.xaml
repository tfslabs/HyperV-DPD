<Window x:Class="DDAGUI.ConnectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDAGUI"
        Title="Connect to Computer" Height="130" Width="420" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Width="420" Height="120" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <TextBlock Name="TextBoxDescription" TextWrapping="Wrap" Width="400" Margin="10,5,10,94" FontSize="14">
            Specifiy a remote computer using DNS name, or IP Address
        </TextBlock>
        <Grid HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="400" Margin="0,26,0,0">
            <TextBlock HorizontalAlignment="Left" Width="104" VerticalAlignment="Center" FontSize="14">Computer Name</TextBlock>
            <TextBox x:Name="ComputerNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Center" Width="290" Margin="110,0,0,0"/>
        </Grid>
        <CheckBox Content="Change Credential" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="ChangeCred" Margin="10,56,0,0" FontSize="14" IsChecked="False" Height="19"/>
        <Grid HorizontalAlignment="Center" Height="22" VerticalAlignment="Top" Width="400" Margin="0,83,0,0" >
            <Button Content="Connect" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" Width="80" x:Name="ConnectToComputer"/>
            <Button Content="Use Local _Computer" HorizontalAlignment="Center" VerticalAlignment="Top" Height="22" Width="235" x:Name="ConnectToLocal"/>
            <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" Width="80" x:Name="Cancel"/>
        </Grid>
    </Grid>
</Window>
