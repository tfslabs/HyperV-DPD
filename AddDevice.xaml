<Window x:Class="DDAGUI.AddDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDAGUI"
        mc:Ignorable="d"
        Title="Add Device" 
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Height="320" 
        Width="440">
    <Grid Width="420">
        <Grid.Margin>
            <Thickness Top="10" Bottom="10" Left="10" Right="10"></Thickness>
        </Grid.Margin>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView x:Name="DeviceList" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding DeviceStatus}" Width="50"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding DeviceType}" Width="100"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding DeviceName}" Width="160"/>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding DeviceId}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1" HorizontalAlignment="Right" Height="20" VerticalAlignment="Center" Width="140">
            <Button Content="Add Device" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Click="AddDeviceButton_Click"/>
            <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Center" Width="60" Click="AddDeviceCloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
